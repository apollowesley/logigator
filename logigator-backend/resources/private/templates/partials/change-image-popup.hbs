{{#> popup title=i18n.POPUP.CHANGE_IMAGE.TITLE defaultOpen=false triggers='.view-my-account-profile__picture-change'}}
	<div class="partial-change-image-popup">

		<div class="partial-change-image-popup__img-container">
			<img class="partial-change-image-popup__img" src="{{user.image}}" alt="User Image">
		</div>

		<p class="partial-change-image-popup__save-error">{{i18n.POPUP.CHANGE_IMAGE.SAVE_ERROR}}</p>

		<div class="partial-change-image-popup__upload-container">
			<input type="file" accept="image/*" class="partial-change-image-popup__file">
			{{> icon icon='cloud_upload' alt='Upload' }}
			<p>{{i18n.POPUP.CHANGE_IMAGE.FILE}}</p>
		</div>

		<button type="button" class="btn-raised primary partial-change-image-popup__save">{{i18n.POPUP.CHANGE_IMAGE.SAVE}}</button>

	</div>
{{/popup}}
