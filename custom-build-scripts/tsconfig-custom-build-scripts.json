{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"sourceMap": false,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": ".",
		"moduleResolution": "node",
		"lib": ["es2018"],
		"types": [
			"node"
		]
	},
	"files": [
		"custom-webpack.config.ts",
		"create-dist-package.ts",
		"package-app.ts",
		"remove-comp-warning-template.ts",
		"index-html-transform.ts"
	],
	"include": [
		"./**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
